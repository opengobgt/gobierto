<div class="column cms_page">
  <main class="content">

    <div class='pure-g'>
      <div class='pure-u-1 pure-u-lg-1-3'>
        <h2 class='with_separator'><%= t('gobierto_participation.shared.new') %></h2>

        <h4 class='with_light_separator m_t_1'><%= t('gobierto_participation.shared.documents') %></h4>
        <div class='document_list m_b_2'>
          <% if @page.attachments && @page.attachments.any? %>
            <% @page.attachments.each do |attachment| %>
              <div class='document'>
                <%= link_to attachment.name , attachment.url, target: '_blank' %>
                <div class='soft'>
                  <small>
                    <%= filetype_icon(attachment) %>
                     ·
                    <%= attachment.extension.upcase %>
                     ·
                    <%= number_to_human_size(attachment.file_size, precision: 2, separator: ',') %>
                  </small>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class='pure-u-1 pure-u-lg-2-3'>
        <article>
          <h1><%= @page.title %></h1>
          <div class='meta'>
            <time>
              <%= l(@page.updated_at, format: :long) %>
            </time>
          </div>
          <%= raw render_liquid(@page.body) %>
          <div class='note'>
            <%= t('gobierto_participation.shared.published_at', date: l(@page.updated_at, format: :long), site: current_site.name) %>
          </div>
        </article>
      </div>
    </div>

  </main>
</div>
