<div class="pure-u-1 pure-u-md-1-3 card_container <%= card_class %>" data-type="<%= data_type %>" data-trend="up" data-freq="daily">
  <div class="indicator_widget padded">
    <div class="front">
      <div class="widget_headline">
      	<h3 class="widget_title"></h3>
      	<i class="fa fa-question-circle pull-right" aria-hidden="true"></i>
      	<a class="fb-sharer" aria-label="facebook">
      		<i class="fa fa-facebook pull-right" aria-hidden="true"></i>
      	</a>
      	<a class="tw-sharer" aria-label="twitter">
      		<i class="fa fa-twitter pull-right" aria-hidden="true"></i>
      	</a>
      </div>
      <div class="widget_body">
        <span class="widget_figure"></span>
        <span class="pull-right widget_pct"></span>
        <div class="sparkline"></div>
      </div>

      <div class="widget_meta">
        <i class="fa fa-university" aria-hidden="true"></i>
        <div class="widget_src"></div>
        <div class="pull-right">
          <i class="fa fa-clock-o" aria-hidden="true"></i>
          <small class="widget_freq"></small>
          <span class="widget-sep">/</span>
          <i class="fa fa-calendar-o" aria-hidden="true"></i>
          <small class="widget_updated"></small>
        </div>
      </div>
    </div>

    <div class="back">
      <div class="widget_headline">
      	<h3 class="widget_title"></h3>
      	<i class="fa fa-times pull-right" aria-hidden="true"></i>
      	<a class="fb-sharer" aria-label="facebook">
      		<i class="fa fa-facebook pull-right" aria-hidden="true"></i>
      	</a>
      	<a class="tw-sharer" aria-label="twitter">
      		<i class="fa fa-twitter pull-right" aria-hidden="true"></i>
      	</a>
      </div>

      <div class="widget_info">
        <span class="js-data-desc"></span>. <%= t("gobierto_indicators.cards.updated") %> <span class="js-data-freq"></span>.
      </div>

      <div class="widget_meta">
        <i class="fa fa-university" aria-hidden="true"></i>
        <div class="widget_src"></div>
        <div class="pull-right">
          <i class="fa fa-clock-o" aria-hidden="true"></i>
          <small class="widget_updated"></small>
        </div>
      </div>
    </div>
  </div>
</div>
